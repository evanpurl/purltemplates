[
  {
    "UpdateStageName":"Application Download",
    "UpdateSourcePlatform":"All",
    "UpdateSource":"GitRepo",
    "UpdateSourceData":"{{DownloadSource}}",
    "UpdateSourceTarget":"{{$FullBaseDir}}"
  },
  {
    "UpdateStageName": "Create Virtual Environment",
    "UpdateSourcePlatform": "Linux",
    "UpdateSource": "Executable",
    "UpdateSourceData": "/bin/bash",
    "UpdateSourceArgs": "-c \"rm -rf '{{$FullRootDir}}venv' && /usr/bin/python3 -m venv '{{$FullRootDir}}venv'\""
  },
  {
    "UpdateStageName": "Pip Install",
    "UpdateSourcePlatform": "Linux",
    "UpdateSource": "Executable",
    "UpdateSourceData": "/bin/bash",
    "UpdateSourceArgs": "-c \"source '{{$FullRootDir}}venv/bin/activate'\""
  }
]